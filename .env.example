POSTGRES_USERNAME=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=logiflow

SPRING_MONGODB_HOST=localhost
SPRING_MONGODB_PORT=27017
SPRING_MONGODB_DATABASE=logiflow

# JWT_SECRET must be at least 32 bytes (256 bits) for HS256 algorithm
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-must-be-at-least-32-bytes-long-for-hs256
# Access token expiration: 15 minutes (900000ms)
JWT_EXPIRATION=900000
# Refresh token expiration: 7 days (604800000ms)
JWT_REFRESH_EXPIRATION=604800000

CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost

# Set to true in production (requires HTTPS)
COOKIE_SECURE=true

SUPER_ADMIN_USERNAME=your_admin_username
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=YourSecurePassword123!
SUPER_ADMIN_FULL_NAME=Super Administrator